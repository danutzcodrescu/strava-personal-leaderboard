{
  "name": "strava-personal-leaderboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.2.2",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.10.0",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.0.4",
    "@testing-library/user-event": "^12.1.6",
    "@turf/turf": "^6.2.0",
    "@types/googlemaps": "^3.39.13",
    "@types/jest": "^26.0.14",
    "@types/node": "^14.11.2",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "convert-units": "^2.3.4",
    "date-fns": "^2.16.1",
    "echarts": "^5.0.1",
    "graphql": "^15.3.0",
    "leaflet": "^1.7.1",
    "lodash": "^4.17.20",
    "polyline-encoded": "^0.0.9",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-leaflet": "^3.0.5",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.1",
    "typescript": "^4.1.3",
    "url": "^0.11.0"
  },
  "scripts": {
    "start": "BROWSER=none react-scripts start",
    "prebuild": "cd functions && yarn install",
    "build": "REACT_APP_URL=${URL} react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "gen-types": "npx apollo client:codegen --target typescript --outputFlat --includes=\"src/queries/*.ts\" --globalTypesFile=src/types/graphql-types.ts src/types/ && rm src/types/graphql-types.ts && prettier src/types/*.ts --write"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.2",
    "@types/lodash": "^4.14.161",
    "@types/react-leaflet": "^2.5.2",
    "@types/react-router-dom": "^5.1.5",
    "husky": "^4.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ],
    "functions/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ]
  }
}
