{
  "name": "strava-personal-leaderboard",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@apollo/client": "^3.0.0-rc.10",
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "@material-ui/styles": "^4.10.0",
    "@testing-library/jest-dom": "^5.11.0",
    "@testing-library/react": "^10.4.3",
    "@testing-library/user-event": "^12.0.11",
    "@turf/turf": "^5.1.6",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@types/react": "^16.9.41",
    "@types/react-dom": "^16.9.0",
    "convert-units": "^2.3.4",
    "date-fns": "^2.14.0",
    "graphql": "^15.2.0",
    "leaflet": "^1.6.0",
    "polyline-encoded": "^0.0.9",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-leaflet": "^2.7.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "3.4.1",
    "typescript": "~3.9.6",
    "url": "^0.11.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "prebuild": "cd functions && yarn install",
    "build": "REACT_APP_URL=${URL} react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "gen-types": "npx apollo client:codegen --target typescript --outputFlat --includes=\"src/queries/*.ts\" --globalTypesFile=src/types/graphql-types.ts src/types/ && rm src/types/graphql-types.ts"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/convert-units": "^2.3.2",
    "@types/react-leaflet": "^2.5.2",
    "@types/react-router-dom": "^5.1.5",
    "husky": "^4.2.5",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ],
    "functions/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ]
  }
}
