{
  "name": "strava-personal-leaderboard",
  "version": "0.1.0",
  "private": true,
  "keywords": [
    "leaflet",
    "serverless",
    "strava",
    "hasura-graphql",
    "apollo",
    "turfjs",
    "netlify",
    "zustand",
    "echarts"
  ],
  "dependencies": {
    "@apollo/client": "^3.4.8",
    "@emotion/react": "^11.4.1",
    "@emotion/styled": "^11.3.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.36",
    "@fortawesome/free-solid-svg-icons": "^5.15.4",
    "@fortawesome/react-fontawesome": "^0.1.15",
    "@material-ui/core": "^5.0.0-beta.2",
    "@material-ui/icons": "^5.0.0-beta.1",
    "@material-ui/lab": "^5.0.0-alpha.41",
    "@material-ui/styles": "^5.0.0-beta.2",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.2.1",
    "@turf/turf": "^6.5.0",
    "convert-units": "^2.3.4",
    "date-fns": "^2.23.0",
    "echarts": "^5.1.2",
    "graphql": "^15.5.1",
    "immer": "^9.0.6",
    "leaflet": "^1.7.1",
    "lodash": "^4.17.21",
    "polyline-encoded": "^0.0.9",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-leaflet": "^3.2.1",
    "react-router-dom": "^5.2.0",
    "react-table": "^7.7.0",
    "url": "^0.11.0",
    "zustand": "^3.5.9"
  },
  "scripts": {
    "start": "BROWSER=none craco start",
    "prebuild": "cd functions && yarn install",
    "build": "REACT_APP_URL=${URL} craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "gen-types": "npx apollo client:codegen --target typescript --outputFlat --includes=\"src/queries/*.ts\" --globalTypesFile=src/types/graphql-types.ts src/types/ && rm src/types/graphql-types.ts && prettier src/types/*.ts --write",
    "sync-data": "ansible-playbook ./ansible-scripts/export_data.yml --tags \"sync\"",
    "prepare": "husky install",
    "dev-wsl": "python ./utils/replace-host-wsl.py && docker-compose down &&  docker-compose up -d && netlify dev",
    "check-compose": "python ./utils/put-back-docker-host.py"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.14.5",
    "@craco/craco": "^6.2.0",
    "@emotion/babel-preset-css-prop": "^11.2.0",
    "@types/convert-units": "^2.3.5",
    "@types/googlemaps": "^3.43.3",
    "@types/jest": "^26.0.24",
    "@types/lodash": "^4.14.172",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.19",
    "@types/react-dom": "^17.0.9",
    "@types/react-leaflet": "^2.8.2",
    "@types/react-router-dom": "^5.1.8",
    "@types/react-table": "^7.7.2",
    "apollo": "^2.33.6",
    "husky": "^7.0.1",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2",
    "react-scripts": "4.0.3",
    "typescript": "^4.3.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn sync-data"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "eslint",
      "prettier --write"
    ],
    "functions/**/*.{js,jsx,ts,tsx,md}": [
      "eslint",
      "prettier --write"
    ]
  }
}
